<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect your account to\nyour organization to\nparticipate in leaderboards"
            android:fontFamily="@font/poppinsmedium"
            android:layout_marginTop="70dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:lineSpacingExtra="3dp"
            android:textColor="#1B4332"
            android:layout_marginBottom="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card_bg"
            android:padding="20dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppinsmedium"
                android:text="Have a group to join"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppinslight"
                android:text="Enter the code"
                android:textSize="10sp"
                android:textColor="#000000"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/groupCodeInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="Group invite code"
                    android:background="#FFFFFF"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:inputType="text"/>

                <ImageView
                    android:id="@+id/btnJoinGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/greenicon"
                    android:background="@android:color/transparent"
                    android:contentDescription="Submit Code"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/footer_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="7">

        <Space
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/home"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:background="@drawable/footer_icon_bg"
            android:src="@drawable/fox"
            android:contentDescription="Home" />

        <Space
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/search"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:background="@drawable/footer_icon_bg"
            android:src="@drawable/search"
            android:contentDescription="Search" />

        <Space
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/progress"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:background="@drawable/footer_icon_bg"
            android:src="@drawable/progress"
            android:contentDescription="Progress" />

        <Space
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/connect"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:background="@drawable/footer_icon_bg"
            android:src="@drawable/connect"
            android:contentDescription="Connect" />

        <Space
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/reward"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:background="@drawable/footer_icon_bg"
            android:src="@drawable/reward"
            android:contentDescription="Reward" />

        <Space
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="0dp" />
    </LinearLayout>

</RelativeLayout>